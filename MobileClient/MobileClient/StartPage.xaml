<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.StartPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Fill" Background="#91DFFF">
            <Frame Style="{StaticResource framStyle}">
                <Label Text="Welcome to SimpleChatApp!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" />
            </Frame>
            <Image Source="logo.png" Margin="10" WidthRequest="400" />
            <Button Style="{StaticResource buttonStyle}" x:Name="ToLoginPageButton" Text="Login" Clicked="ToLoginPageButtonClicked" />
            <Button Style="{StaticResource buttonStyle}" x:Name="ToRegisterPageButton" Text="Register" Clicked="ToRegisterPageButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>